<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameHistoryList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp">
    <EditText
        android:id="@+id/edtChangePasswordOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_lock"
        android:drawableTint="@color/fontBlack"
        android:drawablePadding="10dp"
        android:fontFamily="@font/nunito_semibold"
        android:hint="Masukkan kata sandi lama"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/fontBlack"
        android:textColorHint="@color/fontGray"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />
    <EditText
        android:id="@+id/edtChangePasswordNew"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_lock"
        android:drawableTint="@color/fontBlack"
        android:drawablePadding="10dp"
        android:fontFamily="@font/nunito_semibold"
        android:hint="Masukkan kata sandi baru"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/fontBlack"
        android:textColorHint="@color/fontGray"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />
    <EditText
        android:id="@+id/edtChangePasswordNewConfirm"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_lock"
        android:drawableTint="@color/fontBlack"
        android:drawablePadding="10dp"
        android:fontFamily="@font/nunito_semibold"
        android:hint="Konfirmasi kata sandi baru"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/fontBlack"
        android:textColorHint="@color/fontGray"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />
</LinearLayout>