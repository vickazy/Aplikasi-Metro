<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PengajuanIzinActivity"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:animateLayoutChanges="true"
        tools:ignore="UselessParent">
        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#11000000"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Judul absensi"
            android:inputType="text"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/edtAlasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#11000000"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Deskripsi absensi"
            android:inputType="text|textMultiLine"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />
        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:enabled="false"
                android:layout_gravity="start|center"
                android:id="@+id/edtDari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#11000000"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Dari"
                android:inputType="text"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_marginEnd="60dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />
            <FrameLayout
                android:id="@+id/btnDateDari"
                android:layout_gravity="end|center"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#11000000"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calendar_black"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:enabled="false"
                android:layout_gravity="start|center"
                android:id="@+id/edtSampai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#11000000"
                android:fontFamily="@font/nunito_semibold"
                android:hint="Sampai"
                android:inputType="text"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_marginEnd="60dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />
            <FrameLayout
                android:id="@+id/btnDateSampai"
                android:layout_gravity="end|center"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#11000000"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calendar_black"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <ImageView
                android:id="@+id/gambarIzin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#11000000"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:id="@+id/frameBtnAturGambar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnEditGambar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:drawableStart="@drawable/ic_edit_black"
                    android:fontFamily="@font/nunito_bold"
                    android:textAllCaps="false"
                    android:text="Ubah Gambar"
                    android:drawablePadding="10dp"
                    android:padding="12dp"
                    tools:ignore="HardcodedText,RtlCompat" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnLihatGambar"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:drawableStart="@drawable/ic_image_black"
                    android:fontFamily="@font/nunito_bold"
                    android:textAllCaps="false"
                    android:text="Lihat Gambar"
                    android:drawablePadding="10dp"
                    android:padding="12dp"
                    tools:ignore="HardcodedText,RtlCompat" />
            </LinearLayout>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnAmbilGambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_attach_black"
                android:fontFamily="@font/nunito_bold"
                android:textAllCaps="false"
                android:text="Ambil Gambar Izin"
                android:drawablePadding="10dp"
                android:padding="12dp"
                tools:ignore="HardcodedText,RtlCompat" />
        </FrameLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/frameBtnAmbilGambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp">
            <FrameLayout
                android:id="@+id/btnKirimPermohonan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Kirim Permohonan"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </FrameLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>