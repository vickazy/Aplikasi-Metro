<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailFormUserActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="235dp">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctl_detailFormUserActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleGravity="top|center"
            app:expandedTitleTextAppearance="@style/CollapsingtoolbarTitleExpanded"
            app:collapsedTitleTextAppearance="@style/CollapsingtoolbarTitleCollapsed"
            app:titleEnabled="true">
            <ImageView
                android:id="@+id/image_detailFormUserActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:layout_collapseMode="parallax"
                tools:ignore="ContentDescription"/>
            <FrameLayout
                android:id="@+id/textViewBorderTitleActivityUserFormDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_border_activity_announcement"
                android:layout_gravity="bottom|start"
                android:padding="15dp"
                app:layout_collapseMode="parallax">
                <TextView
                    android:id="@+id/title_detailFormUserActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>
            </FrameLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_detailFormUserActivity"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:theme="@style/ToolbarLight"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/black"
                        android:text="Deskripsi"
                        android:textSize="22sp"
                        android:layout_marginBottom="8dp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/alasan_detailFormUserActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/black"
                        android:text="Rincian"
                        android:textSize="22sp"
                        android:layout_marginBottom="8dp"
                        tools:ignore="HardcodedText" />
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_bold"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/black"
                                android:text="Dikirim tanggal"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_bold"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/black"
                                android:text=":"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/datePublished_detailFormUserActivity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_semibold"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/black"
                                android:text="14/12/2018"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText" />
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_bold"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/black"
                                android:text="Absensi mulai tanggal"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_bold"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/black"
                                android:text=":"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/dateDari_detailFormUserActivity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_semibold"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText" />
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_bold"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/black"
                                android:text="Absensi berakhir tanggal"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_bold"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/black"
                                android:text=":"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/dateSampai_detailFormUserActivity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_semibold"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/black"
                        android:text="Status"
                        android:textSize="22sp"
                        android:layout_marginBottom="8dp"
                        tools:ignore="HardcodedText" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/statusConfirmed_detailFormUserActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="@android:color/holo_green_dark"
                            android:text="Dikonfirmasi"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/statusUnconfirmed_detailFormUserActivity"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="@android:color/holo_red_dark"
                            android:text="Belum dikonfirmasi"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/statusCanceled_detailFormUserActivity"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="@android:color/holo_red_dark"
                            android:text="Dibatalkan"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/statusConfirmedDescription_detailFormUserActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="@android:color/darker_gray"
                            android:text="Absensi ini telah diterima &amp; dikonfirmasi oleh administrator. Anda sudah tidak dapat membatalkannya."
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/statusUnconfirmedDescription_detailFormUserActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="@android:color/darker_gray"
                            android:text="Absensi ini masih menunggu untuk dikonfirmasi oleh administrator. Anda masih dapat membatalkan absensi ini."
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/statusCanceledDescription_detailFormUserActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="@android:color/darker_gray"
                            android:text="Anda telah membatalkan absensi ini. Absensi ini tidak akan ditampilkan ke administrator."
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />
                    </FrameLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/btnUbahAbsensiFrame_detailFormUserActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/holo_green_dark"
                app:cardCornerRadius="25dp"
                android:layout_marginBottom="18dp">
                <FrameLayout
                    android:id="@+id/btnUbahAbsensi_detailFormUserActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:layout_margin="12dp"
                        android:text="Ubah konten absensi"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </FrameLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/btnBatalAbsensiFrame_detailFormUserActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="25dp"
                android:layout_marginBottom="10dp">
                <FrameLayout
                    android:id="@+id/btnBatalAbsensi_detailFormUserActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:layout_margin="12dp"
                        android:text="Batalkan absensi"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </FrameLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>